  background: none;
}
.shopDetail_select .price .money view .nsb{
  color: #FEAD29;
  margin: 0 4rpx;
}
.shopDetail_select .price .money view:nth-child(1){
  color: rgba(49, 192, 168, 1);
  font-size: 36rpx;
}
.shopDetail_select .price .money view:nth-child(2){
  color: rgba(164, 164, 164, 1);
  font-size: 28rpx;
}
.shopDetail_select .price image{
  width: 180rpx;
  height: 180rpx;
  background: red;
  position: absolute;
  left: 0;
  bottom: 0rpx;
}

.shopDetail_select .speci{
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
