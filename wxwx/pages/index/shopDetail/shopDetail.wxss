/* 遮罩层 */
.shade{
  position: fixed;
  width: 100%;
  height: 100%;
  /* height: calc(100vh - 100rpx); */
  bottom: 100rpx;
  background:rgba(0, 0, 0, 0.8);   
  overflow: hidden;   
  z-index: 1; 
  display: none;  
}
.show{
  position: fixed;
  width: 100%;
  height: 100%;
  /* height: calc(100vh - 100rpx); */
  bottom: 100rpx;
  background:rgba(0,0,0,0.5);   
  overflow: hidden;   
  z-index: 1; 
  display: block; 
}
.shopDetail_select{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 500rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding: 16rpx 24rpx;
  z-index: 3;
  display: block;
}
.shopDetail_select .taba{
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  font-size: 46rpx;
  color: #666666;
  /* font-weight: 600; */
}
.shopDetail_select .price{
  display: flex;

}
.shopDetail_select .price .photos{
  position: relative;
  width: 180rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.shopDetail_select .price .money view{
  font-family: PingFangSC-regular;
  line-height: 50rpx;
}
.shopDetail_select .price .money view image{
  width: 32rpx;
  height: 32rpx;
  margin: 0 6rpx;
