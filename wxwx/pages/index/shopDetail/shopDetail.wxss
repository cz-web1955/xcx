}
.shopDetail_select .every{
  display: flex;
  flex-wrap: wrap;
  width: 800rpx;
  margin: 0;
}
.shopDetail_select .every view{
  width: 120rpx;
  height: 60rpx;
  background: #E8E8E8;
  text-align: center;
  line-height: 60rpx;
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  font-family: PingFangSC-regular;
  margin: 10rpx 10rpx;
  border-radius: 15rpx;
}
.shopDetail_select .every .act{
  color: #ffffff;
  background: #31C0A8 ;
}