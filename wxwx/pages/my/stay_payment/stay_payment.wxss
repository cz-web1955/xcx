.staymonney_inner .shoping_price{
  width: 710rpx;
  height: auto;
  box-sizing: border-box;
  padding: 0 18rpx
}
.staymonney_inner .shoping_price .qian{
color: rgba(16, 16, 16, 1);
font-size: 26rpx;
font-family: PingFangSC-regular;
}
.staymonney_inner .shoping_price .nsb{
  color: #FEAD29;
  margin: 0 4rpx
}
.shoping_price view{
