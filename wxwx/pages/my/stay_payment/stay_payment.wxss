}


.staymonney_inner .shoping_select{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 18rpx;
  padding-bottom: 20rpx;
}
.staymonney_inner .shoping_select view{
  width: 200rpx;
  height: 52rpx;
  border-radius: 30rpx;
  border: 1px solid #31C0A8 ;
